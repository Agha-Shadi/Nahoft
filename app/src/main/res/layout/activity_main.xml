<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/messages_button"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/messages_icon"
        android:gravity="center"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/settings_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/friends_button"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_person_plain"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/messages_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/user_guide_button"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/menu_book"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/settings_icon"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/user_guide_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/nahoft_message_bottle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="174dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_nahoft" />

    <TextView
        android:id="@+id/friends"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/friendsButtonDescription"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/messages"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/messages"
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Messages"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/settings"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/settings"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="Settings"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_guide"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_guide"
        android:layout_width="211dp"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/userGuideButtonDescription"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>