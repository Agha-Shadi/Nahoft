<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royalBlueDark"
    tools:context=".activities.CreateActivity">

    <ProgressBar
        android:id="@+id/imageShareProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/composeMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/padding_standard">

        <LinearLayout
            android:id="@+id/create_activity_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/create_activity_image_view_header"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/padding_standard"
                android:background="@drawable/purple_56_bkgd_circle"
                app:srcCompat="@drawable/nahoft_icons_create_56"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/create_activity_text_view_header"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/padding_standard"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="@string/button_label_create"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_standard">

            <TextView
                android:id="@+id/to"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:background="@drawable/purple_8_left_radius_btn_bkgd"
                android:text="@string/to"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/button_text_color"/>
            <Spinner
                android:id="@+id/message_recipient_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/white_8_right_radius_btn_bkgd"
                android:popupBackground="@drawable/white_8_bkgd"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/compose_message_text_layout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:boxBackgroundMode="outline"
            app:counterEnabled="true"
            app:counterMaxLength="1000"
            app:counterTextColor="@color/button_text_color"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editMessageText"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:gravity="start"
                android:background="@drawable/white_8_bkgd"
                android:hint="@string/enter_message_here_hint"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="@dimen/padding_half"
                android:textAlignment="textStart"
                android:textDirection="inherit"
                app:textInputLayoutFocusedRectEnabled="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save_image_button"
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:layout_marginStart="@dimen/padding_half"
                android:layout_weight="1"
                android:background="@drawable/blue_8_btn_bkgd"
                android:foreground="?android:attr/selectableItemBackground"
                android:contentDescription="@string/saveImageButton"
                android:drawableTop="@drawable/nahoft_icons_save_image_56"
                android:text="@string/saveImageButtonLabel"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="16sp" />

            <Button
                android:id="@+id/send_as_image_button"
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/padding_half"
                android:background="@drawable/purple_8_btn_bkgd"
                android:foreground="?android:attr/selectableItemBackground"
                android:contentDescription="@string/sendAsImageButton"
                android:drawableTop="@drawable/nahoft_icons_send_image_56"
                android:text="@string/sendAsImageButton"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="16sp" />

            <Button
                android:id="@+id/send_as_text_button"
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/padding_half"
                android:layout_marginEnd="@dimen/padding_half"
                android:background="@drawable/purple_8_btn_bkgd"
                android:foreground="?android:attr/selectableItemBackground"
                android:contentDescription="@string/sendAsTextButton"
                android:drawableTop="@drawable/nahoft_icons_send_text_56"
                android:text="@string/sendAsTextButtonLabel"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>