<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.ReceivingMessageUserGuideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/import_ug_english_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:text="@string/button_label_english"
            android:backgroundTint="@color/colorWarmWhite"
            android:textColor="@color/colorPrimaryDark"/>
        <Button
            android:id="@+id/import_ug_persian_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:text="@string/button_label_persian"
            android:backgroundTint="@color/colorWarmWhite"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="@dimen/padding_standard"
            android:scrollHorizontally="true"
            android:background="@color/colorWarmWhite"
            android:text="@string/imports_user_guide_persian"/>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>