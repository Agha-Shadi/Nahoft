<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity">

    <ImageView
        android:id="@+id/home_help_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/help_outline_24px"
        android:layout_gravity="right"/>

    <ImageView
        android:id="@+id/nahoft_message_bottle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo_clear_message_bottle"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingTop="@dimen/padding_standard"
        android:orientation="vertical" >
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:rowCount="3"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/padding_standard"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/home_button_background"
                android:src="@drawable/gear_asset_50"
                android:tint="@drawable/button_text_color_dark"
                android:contentDescription="@string/settings_button_description" />

            <ImageButton
                android:id="@+id/user_guide_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/padding_standard"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/home_button_background"
                android:src="@drawable/new_user_guide_1"
                android:tint="@drawable/button_text_color_dark"
                android:contentDescription="@string/user_guide_button_description" />

            <ImageButton
                android:id="@+id/friends_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/padding_standard"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/home_button_background"
                android:src="@drawable/new_friends_button"
                android:tint="@drawable/button_text_color_dark"
                android:contentDescription="@string/friends_button_description" />

            <ImageButton
                android:id="@+id/messages_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/padding_standard"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/home_button_background"
                android:src="@drawable/message_asset_50"
                android:tint="@drawable/button_text_color_dark"
                android:contentDescription="@string/messages_button_description" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/new_logout_button_25"
                android:drawablePadding="@dimen/padding_standard"
                android:drawableTint="@color/colorWarmWhite"
                android:text="@string/button_label_logout"
                android:textColor="@color/colorWarmWhite"
                android:textSize="@dimen/detail_name_text_size" />

        </GridLayout>
    </LinearLayout>
</LinearLayout>