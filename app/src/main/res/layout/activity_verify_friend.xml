<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.nahoft.nahoft.activities.VerifyFriendActivity">
    <TextView
        android:id="@+id/verify_friend_explainer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_half"
        android:text="@string/label_verify_friend_explainer"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/friend_security_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_half"
        android:text="@string/label_verify_friend_number"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/friend_security_number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_half"
        android:autoSizeTextType="uniform"
        android:textSize="16sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/user_security_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/padding_half"
        android:text="@string/label_verify_friend_user_number"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/user_security_number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_half"
        android:autoSizeTextType="uniform"
        android:textSize="16sp"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/accept_verification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/button_label_verify_friend_accept"
            android:textColor="@color/colorWarmWhite" />

        <Button
            android:id="@+id/reject_verification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/button_label_verify_friend_reject"
            android:textColor="@color/colorWarmWhite" />

        <Button
            android:id="@+id/reset_friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/button_label_reset"
            android:textColor="@color/colorWarmWhite" />
    </LinearLayout>
</LinearLayout>