<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.HomeActivity">

    <ImageView
        android:id="@+id/nahoft_message_bottle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="150dp"
        android:contentDescription="Nahoft Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_nahoft" />

    <TextView
        android:id="@+id/friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="100dp"
        android:gravity="center|top"
        android:text="@string/button_label_friends"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/friends_button"
        app:layout_constraintEnd_toStartOf="@+id/nahoft_message_bottle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/friends_button" />

    <ImageButton
        android:id="@+id/friends_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_person_plain"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/messages_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="@string/button_label_messages"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/messages_button"
        app:layout_constraintEnd_toStartOf="@+id/messages_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messages_button" />

    <ImageButton
        android:id="@+id/messages_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/messages_icon"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/settings_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="@string/button_label_settings"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/settings_button"
        app:layout_constraintEnd_toStartOf="@+id/settings_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_button" />

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/settings_icon"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/user_guide_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/user_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="@string/button_label_user_guide"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/user_guide_button"
        app:layout_constraintEnd_toStartOf="@+id/user_guide_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_guide_button" />

    <ImageButton
        android:id="@+id/user_guide_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/menu_book"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/logout_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="@string/button_label_logout"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="false"
        android:textSize="24dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logout_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_guide" />

    <ImageButton
        android:id="@+id/logout_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="75dp"
        android:onClick="logout_button_clicked"
        android:background="@drawable/logout_button"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

