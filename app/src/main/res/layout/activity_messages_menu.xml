<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.MessagesMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="32dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/message_asset_75"
            tools:ignore="ContentDescription" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="right"
        android:layout_marginVertical="64dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/view_messages_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/megaphone_50"
            android:drawablePadding="@dimen/padding_standard"
            android:drawableTint="@color/colorWarmWhite"
            android:text="@string/button_label_view_messages"
            android:textColor="@color/colorWarmWhite"
            android:textSize="@dimen/detail_name_text_size" />

        <Button
            android:id="@+id/compose_messages_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/compose_message_50"
            android:drawablePadding="@dimen/padding_standard"
            android:drawableTint="@color/colorWarmWhite"
            android:text="@string/button_label_compose_messages"
            android:textColor="@color/colorWarmWhite"
            android:textSize="@dimen/detail_name_text_size" />

        <Button
            android:id="@+id/import_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/import_50"
            android:drawablePadding="@dimen/padding_standard"
            android:drawableTint="@color/colorWarmWhite"
            android:text="@string/import_label_messages"
            android:textColor="@color/colorWarmWhite"
            android:textSize="@dimen/detail_name_text_size" />
    </LinearLayout>

</RelativeLayout>