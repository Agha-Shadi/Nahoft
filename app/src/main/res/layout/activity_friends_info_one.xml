<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/royalBlueDark"
    tools:context=".activities.FriendsInfoOne">

    <LinearLayout
        android:id="@+id/composeMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:textAlignment="gravity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/padding_standard"
                app:srcCompat="@drawable/nahoft_icons_friends_56"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/padding_standard"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="@string/friends_info_activity_heading"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color_light"
                android:textSize="22sp"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/padding_standard"
                android:background="@drawable/transparent_overlay_radius_8_edit"
                android:contentDescription="@string/edit_friend_button"
                android:text="@string/edit_button"
                android:textAllCaps="false"
                android:textColor="@color/colorWarmWhite"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="312dp"
            android:layout_height="136dp"
            android:layout_marginTop="@dimen/padding_standard"
            android:background="@drawable/transparent_overlay_radius_8"/>
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/padding_standard">

                <Button
                    android:id="@+id/save_image_button"
                    android:layout_width="96dp"
                    android:layout_height="56dp"
                    android:layout_margin="@dimen/padding_half"
                    android:background="@drawable/purple_8_btn_bkgd"
                    android:contentDescription="@string/saveImageButton"
                    android:text="@string/send_message"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWarmWhite"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/send_as_image_button"
                    android:layout_width="96dp"
                    android:layout_height="56dp"
                    android:layout_margin="@dimen/padding_half"
                    android:background="@drawable/green_8_btn_bkgd"
                    android:contentDescription="@string/sendAsImageButton"
                    android:text="@string/import_image"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWarmWhite"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/send_as_text_button"
                    android:layout_width="96dp"
                    android:layout_height="56dp"
                    android:layout_margin="@dimen/padding_half"
                    android:background="@drawable/green_8_btn_bkgd"
                    android:contentDescription="@string/sendAsTextButton"
                    android:text="@string/import_text"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWarmWhite"
                    android:textSize="16sp" />

            </LinearLayout>

    </LinearLayout>

</RelativeLayout>