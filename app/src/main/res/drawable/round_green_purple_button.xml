<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item
        android:right="50dp">
        <shape
            android:shape="rectangle" >
            <solid android:color="@color/caribbeanGreen" />
            <corners
                android:bottomLeftRadius="30dp"
                android:topLeftRadius="30dp" />
            <size
                android:width="270dp"
                android:height="80dp" />
        </shape>
    </item>
    <item android:left="150dp">
        <shape
            android:shape="rectangle" >
            <solid android:color="@color/electricPurple" />
            <corners
                android:bottomRightRadius="30dp"
                android:topRightRadius="30dp" />
            <solid
                android:color="@color/electricPurple" />
            <size
                android:width="270dp"
                android:height="80dp" />
        </shape>
    </item>
</layer-list>
