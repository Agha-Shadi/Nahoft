<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/royalBlueDark"
    android:paddingHorizontal="@dimen/padding_standard"
    android:paddingTop="@dimen/padding_standard"
    android:filterTouchesWhenObscured="true"
    tools:context=".activities.HelpActivity">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_nahoft_icons_help"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/help_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="@string/button_label_help"
        android:textColor="@color/white"
        android:textSize="22sp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/go_to_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_nahoft_icons_home"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_activity_title"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_standard">
        <Button
            android:id="@+id/help_menu_button_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_quarter"
            android:layout_marginHorizontal="@dimen/padding_standard"
            android:padding="@dimen/padding_half"
            android:background="@drawable/transparent_overlay_radius_8"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableTint="@color/button_text_color_light"
            android:text="@string/button_label_about"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans"/>

        <Button
            android:id="@+id/help_menu_button_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_quarter"
            android:layout_marginHorizontal="@dimen/padding_standard"
            android:padding="@dimen/padding_half"
            android:background="@drawable/transparent_overlay_radius_8"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableTint="@color/button_text_color_light"
            android:text="@string/button_label_read"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color_light"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans"/>

        <Button
            android:id="@+id/help_menu_button_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_quarter"
            android:layout_marginHorizontal="@dimen/padding_standard"
            android:padding="@dimen/padding_half"
            android:background="@drawable/transparent_overlay_radius_8"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableTint="@color/button_text_color_light"
            android:text="@string/button_label_create"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color_light"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans" />

        <Button
            android:id="@+id/help_menu_button_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_quarter"
            android:layout_marginHorizontal="@dimen/padding_standard"
            android:padding="@dimen/padding_half"
            android:background="@drawable/transparent_overlay_radius_8"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableTint="@color/button_text_color_light"
            android:text="@string/button_label_friends"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color_light"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans" />

        <Button
            android:id="@+id/help_menu_button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_quarter"
            android:layout_marginHorizontal="@dimen/padding_standard"
            android:padding="@dimen/padding_half"
            android:background="@drawable/transparent_overlay_radius_8"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableTint="@color/button_text_color_light"
            android:text="@string/button_label_settings"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color_light"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans" />
    </LinearLayout>


</RelativeLayout>