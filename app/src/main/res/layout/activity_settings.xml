<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royalBlueDark"
    tools:context=".activities.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="32dp">

        <ImageView
            android:id="@+id/settings_menu_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gear_asset_100"
            app:tint="@color/colorWarmWhite" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="64dp"
        android:paddingTop="32dp">

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:id="@+id/passcode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_standard"
            android:paddingRight="32dp"
            android:background="@android:color/transparent"
            android:text="@string/button_label_passcode"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="24sp"
            android:drawableRight="@drawable/lock_50"
            android:drawableTint="@drawable/button_text_color_light"
            android:drawablePadding="@dimen/padding_half" />

    </LinearLayout>


</RelativeLayout>
