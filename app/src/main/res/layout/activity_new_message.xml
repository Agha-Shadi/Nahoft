<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.NewMessageActivity">

    <LinearLayout
        android:id="@+id/composeMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_standard"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/friend_button"
            android:drawableEnd="@drawable/new_approved_friend_25pxl"
            android:drawablePadding="@dimen/padding_half"
            android:drawableTint="@drawable/button_text_color_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:backgroundTint="@color/colorWarmWhite"
            android:text="@string/hintOnChooseFriendButton"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color_dark" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/compose_message_text_layout"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_margin="@dimen/padding_standard"
            app:counterEnabled="true"
            app:counterMaxLength="1000"
            app:counterTextColor="@color/colorAccent"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:boxBackgroundMode="outline"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                app:textInputLayoutFocusedRectEnabled="true"
                android:id="@+id/editMessageText"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:padding="@dimen/padding_standard"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|textCapSentences"
                android:hint="@string/enter_message_here_hint"
                android:background="@color/colorWarmWhite"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/send_as_text_button"
                android:drawableEnd="@drawable/new_import_as_text_25pxl"
                android:drawablePadding="@dimen/padding_half"
                android:drawableTint="@drawable/button_text_color_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_half"
                android:backgroundTint="@color/colorWarmWhite"
                android:text="@string/sendAsTextButton"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color_dark" />

            <ProgressBar
                android:id="@+id/imageShareProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <Button
                android:id="@+id/send_as_image_button"
                android:drawableEnd="@drawable/new_import_as_image_25pxl"
                android:drawablePadding="@dimen/padding_half"
                android:drawableTint="@drawable/button_text_color_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_half"
                android:backgroundTint="@color/colorWarmWhite"
                android:text="@string/sendAsImageButton"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color_dark" />

        </LinearLayout>

        <Button
            android:id="@+id/save_image_button"
            android:drawableEnd="@drawable/new_import_as_image_25pxl"
            android:drawablePadding="@dimen/padding_half"
            android:drawableTint="@drawable/button_text_color_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:backgroundTint="@color/colorWarmWhite"
            android:text="@string/saveImageButton"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color_dark" />

    </LinearLayout>



</RelativeLayout>