<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/royalBlueDark</item>
        <item name="colorPrimaryDark">@color/royalBlueDark</item>
        <item name="colorAccent">@color/caribbeanGreen</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:padding">2dp</item>
        <item name="alertDialogCenterButtons">true</item>
        <item name="android:dialogCornerRadius">8dp</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColor">@color/royalBlueDark</item>
        <item name="buttonBarButtonStyle">@style/AppTheme.AlertButton</item>
    </style>

    <style name="AppTheme.AddFriendAlertDialog" parent="AppTheme.AlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.AlertButtonBlue</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.AlertButtonGrey</item>
    </style>

    <style name="AppTheme.VerifyAlertDialog" parent="AppTheme.AlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.AlertButtonBlue</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.AlertButtonOrange</item>
    </style>

    <style name="AppTheme.AlertButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="minWidth">104dp</item>
        <item name="minHeight">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_text_color_light</item>
    </style>

    <style name="AppTheme.AlertButtonBlue" parent="AppTheme.AlertButton">
        <item name="android:background">@drawable/blue_56_btn_bkgd</item>
    </style>

    <style name="AppTheme.AlertButtonRed" parent="AppTheme.AlertButton">
        <item name="android:background">@drawable/red_56_btn_bkgd</item>
    </style>

    <style name="AppTheme.AlertButtonGrey" parent="AppTheme.AlertButton">
        <item name="android:background">@drawable/grey_56_btn_bkgd</item>
    </style>

    <style name="AppTheme.AlertButtonOrange" parent="AppTheme.AlertButton">
        <item name="android:background">@drawable/orange_56_btn_bkgd</item>
    </style>

    <style name="AppTheme.AlertText" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="color">@color/royalBlueDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AlertTextTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="color">@color/royalBlueDark</item>
        <item name="android:textSize">19sp</item>
    </style>

</resources>