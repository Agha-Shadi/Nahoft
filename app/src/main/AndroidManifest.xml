<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.nahoft.nahoft">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />

    <application
        android:name=".Nahoft"
        android:allowBackup="false"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@drawable/nahoft_icon_launcher_foreground"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nahoft_icon_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.VerifyFriendActivity" />
        <activity
            android:name=".activities.ImportImageTextActivity"
            android:label="Import"/>
        <activity
            android:name=".activities.AddFriendActivity"
            android:label="Add Friends"/>
        <activity android:name=".activities.SelectKeySenderActivity" />
        <activity android:name=".activities.SelectMessageSenderActivity"/>
        <activity
            android:name=".activities.MessageActivity"/>
        <activity
            android:name=".activities.PasscodeActivity"
            android:label="Create Passcodes"/>
        <activity android:name=".activities.ApplicationShortcutActivity" />
        <activity
            android:icon="@mipmap/nahoft_icon_launcher_round"
            android:name=".activities.EnterPasscodeActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FriendsActivity"
            android:label="Friends"/>
        <activity
            android:name=".activities.FriendSelectionActivity"
            android:label="Choose Friend to Message"/>
        <activity
            android:name=".activities.NewMessageActivity"
            android:label="Compose Message"/>
        <activity
            android:name=".ReceivingMessageUserGuideActivity"
            android:label="Imports User Guide"/>
        <activity
            android:name=".SettingsUserGuideActivity"
            android:label="Passcodes User Guide"/>
        <activity
            android:name=".SendingMessagesUserGuideActivity"
            android:label="Messages User Guide"/>
        <activity
            android:name=".FriendsUserGuideActivity"
            android:label="Friends User Guide"/>
        <activity
            android:name=".SettingsActivity"
            android:label="Passcode"/>
        <activity
            android:name=".UserGuideActivity"
            android:label="User Guides"/>
        <activity
            android:name=".activities.MessagesActivity"
            android:label="Messages"
            android:icon="@drawable/app_shortcut_email"/>
        <activity
            android:name=".activities.HomeActivity"
            android:label="Home">

            <!-- Allows other apps to share images with us -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            <!-- Allows other apps to share text with us -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
    </application>

</manifest>