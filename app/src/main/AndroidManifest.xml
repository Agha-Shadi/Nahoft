<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.nahoft.nahoft">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Nahoft"
        android:allowBackup="false"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="Nahoft"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.HomeHelpButtonActivity"></activity>
        <activity android:name=".activities.MessagesMenuActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="org.nahoft.nahoft.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".activities.VerifyFriendActivity" />
        <activity android:name=".activities.ImportImageTextActivity" />
        <activity android:name=".activities.AddFriendActivity" />
        <activity android:name=".activities.SelectKeySenderActivity" />
        <activity android:name=".activities.SelectMessageSenderActivity" />
        <activity android:name=".activities.MessageActivity" />
        <activity android:name=".activities.PasscodeActivity" />
        <activity
            android:name=".activities.EnterPasscodeActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.FriendsActivity" />
        <activity android:name=".activities.FriendSelectionActivity" />
        <activity android:name=".activities.NewMessageActivity" />
        <activity android:name=".activities.ImportingUserGuideActivity" />
        <activity android:name=".activities.SettingsUserGuideActivity" />
        <activity android:name=".activities.SendingMessagesUserGuideActivity" />
        <activity android:name=".activities.FriendsUserGuideActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.UserGuideActivity" />
        <activity
            android:name=".activities.MessagesActivity"
            android:icon="@drawable/app_shortcut_email" />
        <activity android:name=".activities.HomeActivity">

            <!-- Allows other apps to share images with us -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <!-- Allows other apps to share text with us -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
    </application>

</manifest>