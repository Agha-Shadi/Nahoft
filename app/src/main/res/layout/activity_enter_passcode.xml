<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".activities.EnterPasscodeActivity">

    <ImageView
        android:id="@+id/nahoft_message_bottle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/logo_clear_message_bottle" />

    <LinearLayout
        android:id="@+id/passcodeLogoContainer"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/passcode_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_standard"
            android:text=""
            android:textColor="@color/colorWarmWhite"
            android:inputType="textPassword"
            app:backgroundTint="@color/colorWarmWhite"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_standard"
            android:background="@color/colorWarmWhite"
            android:text="@string/Login"
            android:textColor="@drawable/button_text_color_dark"/>

    </LinearLayout>

</LinearLayout>