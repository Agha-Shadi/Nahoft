<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.NewMessageActivity">

    <LinearLayout
        android:id="@+id/composeMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/composeErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FDCFCF"
            android:textSize="15sp"
            android:visibility="gone"
            tools:text="@string/error_loading_image_message" />

        <Button
            android:id="@+id/friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:text="@string/hintOnChooseFriendButton"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editMessageText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/colorAccent"
            android:ems="16"
            android:importantForAutofill="no"
            android:inputType="textMultiLine|textCapSentences"
            android:paddingTop="@dimen/padding_standard"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/composeMessageContainer"
        android:padding="@dimen/padding_standard"
         >

        <Button
            android:id="@+id/send_as_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/sendAsTextButton"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/send_as_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/sendAsImageButton"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</RelativeLayout>