<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royalBlueDark"
    tools:context=".activities.FriendsListActivity">

    <LinearLayout
        android:id="@+id/friends_list_activity_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/friends_list_activity_image_view_header"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/padding_standard"
            app:srcCompat="@drawable/nahoft_icons_friends_56"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/friends_list_activity_text_view_header"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/padding_standard"
            android:gravity="center"
            android:fontFamily="@font/open_sans"
            android:text="@string/button_label_friends"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="22sp"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/friendsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friendsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="175dp"
            android:scrollbars="vertical" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/padding_standard"
            android:layout_marginTop="@dimen/padding_standard"
            android:layout_marginEnd="@dimen/padding_standard"
            android:layout_marginBottom="@dimen/padding_standard"
            android:clickable="true"
            android:contentDescription="@string/content_description_add_friend_button"
            android:tint="@color/caribbeanGreen"
            android:backgroundTint="@color/colorWarmWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/baseline_add_black_36dp" />

    </LinearLayout>

</RelativeLayout>
