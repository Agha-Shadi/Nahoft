<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royalBlueDark"
    tools:context=".activities.HomeActivity">

    <ImageView
        android:id="@+id/nahoft_message_bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/nahoft_logo_transparent_104"
        tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/read_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/read_button_description"
                android:background="@drawable/btn_bkgd_green_home"
                android:foreground="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_nahoft_icons_read"
                android:paddingHorizontal="@dimen/padding_quarter"
                android:textColor="@color/button_text_color_light"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:text="@string/button_label_read"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/create_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/read_button_description"
                android:drawableRight="@drawable/ic_nahoft_icons_create"
                android:paddingHorizontal="@dimen/padding_quarter"
                android:background="@drawable/btn_bkgd_purple_home"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/button_text_color_light"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:text="@string/button_label_create"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="@dimen/padding_three_quarters"
            android:layout_above="@id/logout_button"
            android:orientation="horizontal">

            <Button
                android:id="@+id/friends_button"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/friends_button_description"
                android:drawableTop="@drawable/ic_nahoft_icons_friends"
                android:fontFamily="@font/open_sans"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/button_label_friends"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color_light"
                android:textSize="18sp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/user_guide_button"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/user_guide_button_description"
                android:drawableTop="@drawable/ic_nahoft_icons_help"
                android:fontFamily="@font/open_sans"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/button_label_help"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color_light"
                android:textSize="18sp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/settings_button"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/settings_button_description"
                android:drawableTop="@drawable/ic_nahoft_icons_settings"
                android:fontFamily="@font/open_sans"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/button_label_settings"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color_light"
                android:textSize="18sp"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="@dimen/padding_three_quarters"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/new_logout_button_25"
        android:drawablePadding="@dimen/padding_standard"
        android:drawableTint="@color/button_text_color_light"
        android:fontFamily="@font/open_sans"
        android:text="@string/button_label_logout"
        android:textAllCaps="false"
        android:textColor="@color/button_text_color_light"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/homeProgressBar"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>