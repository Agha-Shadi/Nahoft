<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.org.nahoft">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="Nahoft"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ApplicationShortcutActivity"/>
        <activity android:name=".EnterPasscodeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SetLanguageActivity" />
        <activity android:name=".FriendsActivity" />
        <activity android:name=".FriendSelectionActivity" />
        <activity android:name=".NewMessageActivity" />
        <activity android:name=".ReceivingMessageUserGuideActivity" />
        <activity android:name=".SettingsUserGuideActivity" />
        <activity android:name=".SendingMessagesUserGuideActivity" />
        <activity android:name=".FriendsUserGuideActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".UserGuideActivity" />

        <activity android:name=".MessagesActivity" >
            // Allows other apps to share images with us
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            // Allows other apps to share text with us
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity"/>
    </application>

</manifest>