<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/royalBlueDark"
    tools:context=".activities.ImportImageActivity">

    <LinearLayout
        android:id="@+id/importImagesActivityLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".activities.ImportImageActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="32dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="25dp"
                android:layout_margin="@dimen/padding_half"
                app:srcCompat="@drawable/nahoft_icons_import_image_56"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:layout_margin="@dimen/padding_half"
                android:fontFamily="@font/open_sans"
                android:text="@string/button_label_import_image"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color_light"
                android:textSize="22dp"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/padding_standard">

            <TextView
                android:id="@+id/to"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:background="@drawable/green_8_btn_bkgd"
                android:text="@string/from"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/colorWarmWhite">
            </TextView>

            <Spinner
                android:id="@+id/message_sender_spinner"
                android:layout_width="264dp"
                android:layout_height="40dp"
                android:background="@drawable/white_8_right_radius_btn_bkgd"
                android:popupBackground="@drawable/white_8_bkgd"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:fontFamily="@font/open_sans_italic"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_margin="@dimen/padding_standard"
            android:text="@string/import_image_hint"
            android:textSize="16sp"
            android:textColor="@color/colorWarmWhite" />

    <ProgressBar
        android:id="@+id/imageImportProgressBar"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/import_image_button"
                android:layout_width="96dp"
                android:layout_height="104dp"
                android:layout_gravity="center_horizontal|center"
                android:contentDescription="@string/button_import_image_label_two"
                android:background="@drawable/green_8_btn_bkgd"
                android:drawableTop="@drawable/nahoft_icons_send_image_56"
                android:layout_margin="@dimen/padding_half"
                android:textColor="@color/colorWarmWhite"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:text="@string/button_label_import_image"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>