    <item android:right="150dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/electricPurple" />
            <corners
                android:topLeftRadius="8dp"
                android:bottomLeftRadius="8dp"/>
        </shape>
    </item>

    <item android:left="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWarmWhite"/>
            <corners
