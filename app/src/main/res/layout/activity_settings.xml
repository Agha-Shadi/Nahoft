<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:id="@+id/passcode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_standard"
            android:paddingRight="32dp"
            android:background="@android:color/transparent"
            android:text="@string/button_label_passcode"
            android:textColor="@color/colorWarmWhite"
            android:textSize="24sp"
            android:drawableRight="@drawable/passcode_icon"
            android:drawableTint="@color/colorWarmWhite"
            android:drawablePadding="@dimen/padding_half" />

    </LinearLayout>


</RelativeLayout>
