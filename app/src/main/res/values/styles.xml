<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/royalBlueDark</item>
        <item name="colorPrimaryDark">@color/royalBlueDark</item>
        <item name="colorAccent">@color/caribbeanGreen</item>
    </style>

    <style name="MyDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/royalBlueDark</item>
        <item name="colorSurface">@color/colorWarmWhite</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AddFriendAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:width">256dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:dialogCornerRadius">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.AlertPositiveButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.AlertNeutralButton</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColor">@color/royalBlueDark</item>
    </style>

    <style name="AppTheme.AlertPositiveButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/blue_56_btn_bkgd</item>
        <item name="android:width">104dp</item>
        <item name="height">40dp</item>
        <item name="minHeight">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="AppTheme.AlertNeutralButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/grey_56_btn_bkgd</item>
        <item name="android:width">104dp</item>
        <item name="minHeight">40dp</item>
        <item name="height">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

</resources>