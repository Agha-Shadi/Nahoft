<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.NewMessageActivity">

    <LinearLayout
        android:id="@+id/composeMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_standard"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hintOnChooseFriendButton"/>

        <EditText
            android:id="@+id/editMessageText"
            android:paddingTop="@dimen/padding_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:ems="16"
            android:inputType="textMultiLine|textCapSentences"
            android:textColor="@color/colorAccent"
            android:importantForAutofill="no" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/composeMessageContainer"
        android:padding="@dimen/padding_standard"
         >

        <Button
            android:id="@+id/send_as_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sendAsTextButton" />

        <Button
            android:id="@+id/send_as_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sendAsImageButton" />

    </LinearLayout>

</RelativeLayout>