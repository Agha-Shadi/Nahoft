<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royalBlueDark"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.UserGuideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:paddingTop="32dp">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="25dp"
            android:background="@android:color/transparent"
            android:layout_margin="@dimen/padding_half"
            app:srcCompat="@drawable/nahoft_icons_help_56"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:layout_margin="@dimen/padding_half"
            android:fontFamily="@font/open_sans"
            android:text="@string/button_label_help"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="22sp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/friends_user_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_standard"
            android:background="@drawable/user_guide_round_buttons"
            android:drawableTint="@drawable/button_text_color_light"
            android:text="@string/button_label_friends"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans"/>

        <Button
            android:id="@+id/sending_messages_user_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_standard"
            android:background="@drawable/user_guide_round_buttons"
            android:drawableTint="@drawable/button_text_color_light"
            android:text="@string/button_label_messages"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans" />

        <Button
            android:id="@+id/passcodes_user_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_standard"
            android:background="@drawable/user_guide_round_buttons"
            android:drawableTint="@drawable/button_text_color_light"
            android:text="@string/button_label_passcode"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans" />

        <Button
            android:id="@+id/importing_user_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_standard"
            android:background="@drawable/user_guide_round_buttons"
            android:drawableTint="@drawable/button_text_color_light"
            android:text="@string/button_label_importing"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans" />
    </LinearLayout>
</LinearLayout>