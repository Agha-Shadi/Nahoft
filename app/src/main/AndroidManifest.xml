<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.nahoft.nahoft">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />

    <application
        android:name=".Nahoft"
        android:allowBackup="false"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AddFriendActivity"></activity>
        <activity android:name=".activities.SecurityWordActivity" />
        <activity android:name=".activities.SelectKeySenderActivity" />
        <activity android:name=".activities.SelectMessageSenderActivity" />
        <activity android:name=".activities.MessageActivity" />
        <activity android:name=".activities.PasscodeActivity" />
        <activity android:name=".ApplicationShortcutActivity" />
        <activity
            android:name=".activities.EnterPasscodeActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".ApplicationShortcutActivity"
            android:enabled="false"
            android:icon="@drawable/app_shortcut_default"
            android:label="@string/app_name"
            android:targetActivity=".activities.EnterPasscodeActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity android:name=".SetLanguageActivity" />
        <activity android:name=".activities.FriendsActivity" />
        <activity android:name=".activities.FriendSelectionActivity" />
        <activity android:name=".NewMessageActivity" />
        <activity android:name=".ReceivingMessageUserGuideActivity" />
        <activity android:name=".SettingsUserGuideActivity" />
        <activity android:name=".SendingMessagesUserGuideActivity" />
        <activity android:name=".FriendsUserGuideActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".UserGuideActivity" />
        <activity android:name=".activities.MessagesActivity" />
        <activity android:name=".activities.HomeActivity">

            <!-- Allows other apps to share images with us -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <!-- Allows other apps to share text with us -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
    </application>

</manifest>