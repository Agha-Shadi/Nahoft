<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.MessagesMenuActivity">

    <ImageView
        android:id="@+id/messages_menu_help_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/help_button_content_description"
        app:srcCompat="@drawable/help_outline_24px"
        android:layout_gravity="end"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/message_asset_75"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:gravity="end"
        android:layout_marginVertical="250dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/view_messages_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/new_read_messages_1_50"
            android:drawablePadding="@dimen/padding_standard"
            android:drawableTint="@drawable/button_text_color_light"
            android:text="@string/button_label_view_messages"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="@dimen/detail_name_text_size" />

        <Button
            android:id="@+id/compose_messages_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/compose_message_50"
            android:drawablePadding="@dimen/padding_standard"
            android:drawableTint="@drawable/button_text_color_light"
            android:text="@string/button_label_compose_messages"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="@dimen/detail_name_text_size" />

        <Button
            android:id="@+id/import_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/import_50"
            android:drawablePadding="@dimen/padding_standard"
            android:drawableTint="@drawable/button_text_color_light"
            android:text="@string/import_label_messages"
            android:textColor="@drawable/button_text_color_light"
            android:textSize="@dimen/detail_name_text_size" />
    </LinearLayout>

</LinearLayout>