<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ApplicationShortcutActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setApplicationShortcutDefault"
        android:layout_centerInParent="true"
        android:text="@string/setApplicationShortcut"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/setApplicationShortcutDefault"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        app:srcCompat="@drawable/app_shortcut_default" />

    <ImageButton
        android:id="@+id/setApplicationShortcutIconI"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/setApplicationShortcutDefault"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        app:srcCompat="@drawable/app_shortcut_email"/>

</RelativeLayout>