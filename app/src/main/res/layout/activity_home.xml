<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.HomeActivity">

    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="32dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/nahoft_message_bottle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@mipmap/nahoft_icon_launcher_round"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="32dp" >

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:id="@+id/friends_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:text="@string/button_label_friends"
            android:textColor="@color/colorWarmWhite"
            android:textSize="@dimen/detail_name_text_size"
            android:drawableRight="@drawable/smiley_face"
            android:drawableTint="@color/colorWarmWhite"
            android:drawablePadding="@dimen/padding_standard" />

        <Button
            android:id="@+id/messages_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_chat_white_18dp"
            android:drawablePadding="@dimen/padding_standard"
            android:drawableTint="@color/colorWarmWhite"
            android:text="@string/button_label_messages"
            android:textColor="@color/colorWarmWhite"
            android:textSize="@dimen/detail_name_text_size" />

        <Button
            android:id="@+id/settings_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_settings_24px"
            android:drawablePadding="@dimen/padding_standard"
            android:drawableTint="@color/colorWarmWhite"
            android:text="@string/button_label_settings"
            android:textColor="@color/colorWarmWhite"
            android:textSize="@dimen/detail_name_text_size" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:id="@+id/user_guide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:text="@string/button_label_user_guide"
            android:textColor="@color/colorWarmWhite"
            android:textSize="@dimen/detail_name_text_size"
            android:drawableRight="@drawable/ic_menu_book_24px"
            android:drawableTint="@color/colorWarmWhite"
            android:drawablePadding="@dimen/padding_standard"/>

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_half"
            android:background="@android:color/transparent"
            android:text="@string/button_label_logout"
            android:textColor="@color/colorWarmWhite"
            android:textSize="@dimen/detail_name_text_size"
            android:drawableRight="@drawable/logout_button"
            android:drawableTint="@color/colorWarmWhite"
            android:drawablePadding="@dimen/padding_standard"/>

    </LinearLayout>




</RelativeLayout>