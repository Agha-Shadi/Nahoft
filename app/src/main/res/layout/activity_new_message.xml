<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.NewMessageActivity">

    <LinearLayout
        android:id="@+id/composeMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/friend_button"
            android:drawableEnd="@drawable/ic_person_24px"
            android:drawablePadding="@dimen/padding_half"
            android:drawableTint="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="@dimen/padding_standard"
            android:text="@string/hintOnChooseFriendButton"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/editMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:importantForAutofill="no"
            android:hint="@string/enter_message_here_hint"
            android:textAlignment="center"
            android:inputType="textMultiLine|textCapSentences"
            android:minHeight="250dp"
            android:paddingTop="@dimen/padding_standard" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_standard">

            <Button
                android:id="@+id/send_as_text_button"
                android:drawableEnd="@drawable/ic_article_24px"
                android:drawablePadding="@dimen/padding_half"
                android:drawableTint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_half"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/sendAsTextButton"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/send_as_image_button"
                android:drawableEnd="@drawable/ic_photo_24px"
                android:drawablePadding="@dimen/padding_half"
                android:drawableTint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_half"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/sendAsImageButton"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>