<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context=".UserGuideActivity">

    <Button
        android:id="@+id/friends_user_guide"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/button_label_friends"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/sending_messages_user_guide"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/sending_messages_user_guide"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:text="@string/button_label_messages"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/receiving_messages_user_guide"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/settings_user_guide"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:text="@string/button_label_setting_passcodes"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/receiving_messages_user_guide"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:text="@string/button_label_importing"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/settings_user_guide"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>