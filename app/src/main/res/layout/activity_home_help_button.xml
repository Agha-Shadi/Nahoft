<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".activities.HomeHelpButtonActivity">

        <TextView
            android:id="@+id/settings_ug_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWarmWhite"
            android:isScrollContainer="true"
            android:padding="@dimen/padding_standard"
            android:text="@string/button_home_help"
            android:textSize="15sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/ok_button"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/detail_name_text_size"
        android:layout_gravity="end"/>

</LinearLayout>

